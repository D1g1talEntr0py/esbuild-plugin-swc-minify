{
	"compilerOptions": {
		"baseUrl": "./src",
		"checkJs": false,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ESNext",
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true
	},
	"include": [ "src/**/*" ],
	"exclude": [ "node_modules" ]
}